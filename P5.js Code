let pX;
let pY;
let i = 0;

let xInput;
let yInput;
let x;
let y;

function setup() {
  createCanvas(400, 400);

  xInput = createInput();
  xInput.size(50);
  xInput.position(0, 380);

  yInput = createInput();
  yInput.size(50);
  yInput.position(60, 380);

}

function draw() {
  background(220);

  textAlign(CENTER);
  textSize(50);
  x = xInput.value();
  y = yInput.value();

  //If (x,y); (pX,pY) = (0,-1)
  if (x > 0 && y > 0) {
    text("x = 0", width / 2, height / 2 - 50);
    text("y = -1", width / 2, height / 2 + 50);

  }

  //If (-x,-y); (pX,pY) = (0,1)
  if (x < 0 && y < 0) {
    text("x = 0", width / 2, height / 2 - 50);

    text("y = +1", width / 2, height / 2 + 50);
  }

  //If (x,-y); (pX,pY) = (-1,0)
  if (x > 0 && y < 0) {
    text("x = -1", width / 2, height / 2 - 50);

    text("y = 0", width / 2, height / 2 + 50);
  }

  //If (-x,y); (pX,pY) = (1,0)
  if (x < 0 && y > 0) {
    text("x = +1", width / 2, height / 2 - 50);

    text("y = 0", width / 2, height / 2 + 50);
  }

  //   text("x = +1", width / 2, height / 2 - 50);
  //   text("x = -1", width / 2, height / 2 - 50);
  //   text("y = 0", width / 2, height / 2 + 50);
  //   text("y = +1", width / 2, height / 2 + 50);
  //   text("y = -1", width / 2, height / 2 + 50);

  pX = 5 * x * i;
  pY = 5 * y * i;

  print(pX, pY);
}
